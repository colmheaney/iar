<div class="event-latest">
	<h4> <%= event_excerpt.title %></h4>
	<p> <%= raw(truncate(event_excerpt.description, :length => 150, :omission => "... #{link_to "(read more)", polymorphic_path(event_excerpt)}")) %> </p>	
	<span class="timestamp">
		Posted <%= time_ago_in_words(event_excerpt.created_at) %> ago.
	</span>
</div>


