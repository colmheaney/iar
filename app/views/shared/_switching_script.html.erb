<script type="text/javascript">
  
var Site = {
  init : function() {
    this.nav();
  },

  nav : function() {
    var tabpane = $('.tabpane'),
      tab = tabpane.find('.tab'),
      nav = $('#main_nav');

    nav.delegate('li', 'click', function(e) {
      var li = $(this),
            hash;
            

		li
			.siblings()
				.removeClass('selected')
				.end()
				.addClass('selected');       

          
      hash = li.children('a').attr('href');
      tab.hide().filter(hash).show();

      e.preventDefault();
    });
  }
}

Site.init();
</script>