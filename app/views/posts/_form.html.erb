<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field span4">

    <% for category in Category.find(:all) %>
    <p><%= check_box_tag "post[category_ids][]", category.id, @post.categories.include?(category) %>
      <%= category.name %>
    </p>
    <% end %>

    <%= f.label :published_date %><br />
    <%= f.date_select(:published_date, {:use_short_month => 1, :order => [:month, :day, :year]}, {class: "span1 date-select"}) %>

  </div>


  <div class="field span8">
    <%= f.label :title %><br />
    <%= f.text_field :title %>

    <%= f.label :body %><br />
    <%= f.text_area :body %>

    <%= f.submit class: "btn btn-large btn-primary"%>    
  </div>
<% end %>
