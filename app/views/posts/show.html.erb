<% provide(:title, @post.title) %> 
<h1><%= @post.title %></h1>

<p id="notice"><%= notice %></p>


<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Published date:</b>
  <%= @post.published_date %>
</p>

<p>
  <b>User:</b>
  <%= @post.user_id %>
</p>

<% if signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
