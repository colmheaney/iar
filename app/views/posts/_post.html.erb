<div class="content posts">

    <h4><%= link_to post.title, post_path(post) %></h4>

    <p class="timestamp">
        Posted <%= time_ago_in_words(post.created_at) %> ago by <%= link_to post.user.name, posts_path(:user => post.user.id) %>
    </p>

    <%= excerpt post %>

    <br />
    <br />

    <p>
    Tags: <% post.categories.each do |cat| %>
        <%= link_to cat.name, posts_path(:cat => cat.id), { :class=> "label" } %>
    <% end %>
    </p>

    <% if current_user?(post.user) %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>

</div>

