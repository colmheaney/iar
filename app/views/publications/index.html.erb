<%= provide(:title, 'Publications') %>

<div class="grid">
	<div class="row">

        <nav id="main_nav" class="col-1-5">
            <ul>
                <li class="selected" id="option1"><a href="#tab1">Magazines</a></li>
                <li id="option2"><a href="#tab2">Leaflets</a></li>
                <li id="option3"><a href="#tab3">Papers</a></li>
            </ul>
            <% if signed_in? %>
            <p><%= link_to "Add new publication", new_publication_path %></p>
            <% end %> 
        </nav>
 
        <section class="tabpane col-2-3 download-section">

            <div id="tab1" class="selected tab">
                <ul class="download">                    
                    <%= render @magazine_publications %>               
                </ul>
             </div>


            <div id="tab2" class="tab">
                <ul class="download">                    
                    <%= render @leaflet_publications %>               
                </ul>
             </div>

            <div id="tab3" class="tab">
                <ul class="download">                    
                    <%= render @paper_publications %>               
                </ul>
            </div>
                        
        </section>            
	</div>
</div>

<script type="text/javascript">

    $(document).ready(function() {
        var url = document.location.toString();
        if (url.match('#')) {
          id = (url.split('#')[1]);
          $('.tab').hide();
          var tab = document.getElementById(id).parentNode.getAttribute('id');
          $('#'+tab).show();
          $('.selected').removeClass('selected');
          li = $('a[href=#'+tab+']').parent();
          li.addClass('selected');
          color = li.css('border-left-color');
          $('b').css("background", color);
          $('#header_nav li.active').css("background", color);
          $('.tab, .event-excerpt, .event > div > li, .other, #masthead').css("border-bottom-color", color);
          $('#tabHeadings .selected, #magHeading').css("border-left-color", color);
          $('em').css("color", color);
        }  
        else {
            $('.tab').hide();
            $('#tab1').show();
        }
    });

</script>

<%= render partial: 'shared/switching_script' %>
