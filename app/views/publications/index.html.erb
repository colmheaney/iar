<%= provide(:title, 'Publications') %>

<div class="grid">
	<div class="row">

        <nav id="main_nav" class="col-1-5">
            <ul>
                <li class="selected" id="option1"><a href="#tab1">Magazines</a></li>
                <li id="option2"><a href="#tab2">Leaflets</a></li>
                <li id="option3"><a href="#tab3">Papers</a></li>
            </ul>
            <% if signed_in? %>
            <p><%= link_to "Add new publication", new_publication_path %></p>
            <% end %> 
        </nav>
 
        <section class="tabpane col-2-3 download-section">
            <div id="tab1" class="selected tab">

                <% @magazines.each do |mag| %>
                <div class="col-1-3 download">                    
                    
                    <a href=<%= mag.file_url().to_s %>><%= image_tag mag.image_url(:thumb).to_s %></a>
                    <h3><%= mag.title %></h3>
                    <p><%= mag.description %></p>
                    
                    <p><%= link_to "download", download_publication_path(mag) %>
                    | <%= link_to "view", mag.file_url.to_s %>
                    <% if signed_in? %>
                    | <%= link_to "delete", mag, method: :delete, data: { confirm: "You sure?" } %>     
                    | <%= link_to "edit", edit_publication_path(mag) %> </p>
                    <% end %>
                       
                </div>
                        
                <% end %>

             </div>


            <div id="tab2" class="tab">
                <% @leaflets.each do |mag| %>
                <div class="download">                    

                    <a href=<%= mag.file_url().to_s %>><%= image_tag mag.image_url(:thumb).to_s %></a>
                    <h3><%= mag.title %></h3>
                    <p><%= mag.description %></p>
                    
                    <p><%= link_to "download", download_publication_path(mag) %>
                    | <%= link_to "view", mag.file_url.to_s %>
                    <% if signed_in? %>
                    | <%= link_to "delete", mag, method: :delete, data: { confirm: "You sure?" } %>     
                    | <%= link_to "edit", edit_publication_path(mag) %> </p>
                    <% end %>
                       
                </div>
                        
                <% end %>
            </div>

            <div id="tab3" class="tab">
                <% @papers.each do |mag| %>
                <div class="download">                    
                    
                    <a href=<%= mag.file_url().to_s %>><%= image_tag mag.image_url(:thumb).to_s %></a>
                    <h3><%= mag.title %></h3>
                    <p><%= mag.description %></p>
                    
                    <p><%= link_to "download", download_publication_path(mag) %>
                    | <%= link_to "view", mag.file_url.to_s %>
                    <% if signed_in? %>
                    | <%= link_to "delete", mag, method: :delete, data: { confirm: "You sure?" } %>     
                    | <%= link_to "edit", edit_publication_path(mag) %> </p>
                    <% end %>
                       
                </div>
                        
                <% end %>
            </div>                        
        </section>            
	</div>
</div>

<%= render partial: 'shared/switching_script' %>
