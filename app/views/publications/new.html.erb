<%= provide(:title, "Add new Publication") %>
<h1>Add new Publication</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@publication) do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :image, "Choose Image:" %>
			<%= f.file_field :image %>

			<%= f.label :file, "Choose File:" %>
			<%= f.file_field :file %>			
			
			<%= f.submit "Add new publication", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

