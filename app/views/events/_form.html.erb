<%= form_for(@event) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :date %><br />
		<%= f.date_select(:date, {:use_short_month => 1, :order => [:month, :day, :year]}, {class: "col-1-3"}) %>	

		<%= f.label :news %>
		<%= f.radio_button :news, 1 %>
		<%= f.label :event %>
		<%= f.radio_button :news, 0 %>

		<%= f.label :title %>
		<%= f.text_field :title %>

		<%= f.label :description %>
		<%= f.text_area :description, :class => 'ckeditor' %>

		<%= f.label :location %>
		<%= f.text_field :location %>

		<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>

<% end %>